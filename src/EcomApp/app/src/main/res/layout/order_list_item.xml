<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8.0dp"
    android:layout_marginTop="4.0dp"
    android:layout_marginRight="8.0dp"
    android:layout_marginBottom="4.0dp"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="200.0dp"
                fresco:placeholderImage="@color/stay_color" />

            <include
                android:id="@+id/loadingView"
                layout="@layout/hub_custom_loading"
                android:layout_width="match_parent"
                android:layout_height="200.0dp"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name "
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item descriptions"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚± 0.00"
                    android:textColor="#4CAF50"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/customer_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Email"
                        android:textColor="#4CAF50"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/date_ordered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date Ordered"
                        android:textAlignment="textEnd"
                        android:textColor="#4CAF50"
                        android:textSize="12dp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/gen_black"
            android:elevation="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/order_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gen_white"
                android:gravity="center"
                android:text="Cancel Order"
                android:textColor="@color/bg_screen1"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/order_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bg_screen1"
                android:gravity="center"
                android:text="Confirm Order"
                android:textColor="@color/dirty_white"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/order_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bg_screen1"
                android:gravity="center"
                android:text="View Info"
                android:textColor="@color/dirty_white"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>